<Window x:Class="library.AddDebt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="AddDebt" Height="450" Width="800">
    <Grid>
        <Label Width="400" Height="40" Margin="-220,-370,0,0" FontSize="25">Имя:</Label>
        <TextBox Name="nameText" Width="500" Height="40" Margin="-120,-280,0,0"></TextBox>
        <Label  Width="400" Height="40" Margin="-220,-170,0,0" FontSize="25">Фамилия:</Label>
        <TextBox Name="surnameText" Width="500" Height="40" Margin="-120,-80,0,0"></TextBox>
        <Label Width="400" Height="40" Margin="-220,30,0,0" FontSize="25">Книга:</Label>
        <TextBox Name="bookText" Width="500" Height="40" Margin="-120,120,0,0"></TextBox>
        <Label Width="400" Height="40" Margin="-220,230,0,0" FontSize="25">Класс:</Label>
        <TextBox Name="gradeText" FontSize="25" Width="160" Height="40" Margin="-230,239,0,0"></TextBox>
        <Button Width="150" Height="50" Margin="0,350,0,0" Content="Готово" FontSize="25" Click="addInfo"></Button>

    </Grid>
</Window>
